@model FlightTicketBookingSystem.Models.TicketReserve_tbl

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}



<!-- //header-ends -->
<!-- main content start-->
<div id="page-wrapper">
    <div class="main-page">
