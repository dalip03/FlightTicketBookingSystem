@model IEnumerable<FlightTicketBookingSystem.Models.BookingDetailsData>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<section class="container" style="min-height:90vh;">
    <div class="wrapper">
        <div style="text-align:center; padding-bottom:20px;">

            @if (User.IsInRole("Abhi12"))
            {
                <h2>All Bookings</h2>

            }
            else
            {
                <h2>Upcoming Journey</h2>
            }

            <table class="table">
                <tr>
                    @*<th>
                    @Html.DisplayNameFor(model => model.UserID)
                </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerId)
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.FirstName)*@
                        First Name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.bCusPhoneNum)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AdharNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ResTicketPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Resfrom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ResTo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Time)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    @*status*@
                    <th>
                        Status
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        @*<td>
                        @Html.DisplayFor(modelItem => item.UserID)
                    </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.bCusPhoneNum)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AdharNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ResTicketPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Resfrom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ResTo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Time)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>



                        @*for status*@
                        @using System.Globalization;
                        @{

                            DateTime date;
                            DateTime.TryParseExact(item.Date, "yyyy-MM-dd", CultureInfo.InvariantCulture, DateTimeStyles.None, out date);

                            DateTime currentDate;
                            DateTime.TryParseExact(DateTime.Now.ToString("yyyy-MM-dd"), "yyyy-MM-dd", CultureInfo.InvariantCulture, DateTimeStyles.None, out currentDate);

                            int result = DateTime.Compare(date, currentDate);
                            if (result > 0)
                            {
                                <td style="color:green">
                                    Upcoming
                                </td>
                            }
                            else
                            {
                                <td style="color:red">
                                    Departed
                                </td>
                            }
                        }
                        <td>
                            @*@if (User.IsInRole("Abhi12"))
                            {*@
                            <td>
                                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                                @Html.ActionLink("Cancel", "Delete", new { id = item.Id })
                            </td>

                        @*}*@
                            </td>
                        </tr>
                    }

            </table>
        </div>
    </div>
</section>